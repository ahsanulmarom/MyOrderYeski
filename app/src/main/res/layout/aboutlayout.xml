<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/about"
        android:id="@+id/imagejudul" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/judul"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="225dp"
        android:text="About"/>

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="135dp"
        android:layout_below="@+id/judul"
        android:layout_alignParentStart="true"
        android:scrollbarStyle="insideOverlay"
        android:id="@+id/scrollView2">

        <TextView
            android:layout_width="345dp"
            android:layout_height="135dp"
            android:layout_below="@+id/judul"
            android:layout_alignParentStart="true"
            android:id="@+id/badan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Yeski Cafe adalah cafe yang terletak di jalan Gubeng Kertajaya 9 raya nomor 49, Surabaya. Lokasinya satu area dengan Suoklat, Pintu Rumah, dan Homee. Tidak hanya menyediakan masakan Indonesia tetapi juga masakan dari luar negeri harganya dari 10.000-15.000 rupiah. Selain mekanan berat, juga ada makanan ringan seperti kentang goreng hingga roti maryam yang harganya tidak ada yang melebihi 12.000 rupiah. Minuman pun tidak kalah mengagetkan karena variasinya sangat banyak. \n\n
            Jam Buka: \n
            Senin - Jumat \t 08.00 - 20.00 \n
            Sabtu \t 08.00-17.00 \n
            Minggu \t tutup \n\n\n\n\n"/>
    </ScrollView>

    <ImageButton
        android:src="@drawable/iconmaps"
        android:background="@null"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/BtnMaps"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
